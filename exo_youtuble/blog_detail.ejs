<%- include ("./Header.ejs") %>
            <h1>Blog-detail</h1>
                <div class="blog">
                    <p class="title"><%= blog.titre %> </p>
                    <p class="bref"><%= blog.bref %> </p>
                    <p class="containts"><%= blog.containts %> </p>
                    <a class="del" style="color: red; cursor:pointer;" data-doc=<%= blog._id %>  >Suprimer</a>
                </div>
        </div>
        </div>
    </body>
    <script>
        const btn = document.querySelector(a.del);
        btn.addEventListener('click',(e)=>{
            const endpoint = `/blogs/${btn.dataset.doc}`
            fetch(endpoint,{
                method:"DELETE",
            }).then((res)=>{
                res.json()
            }).then((data)=>{
                window.location.href = data.redirect;
            }).catch((err)=>{
                console.log(err);
            })
        })
        
    </script>
</html>